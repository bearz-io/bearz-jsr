{
    "fmt": {
        "exclude": ["**/*.md"],
        "lineWidth": 100,
        "indentWidth": 4,
        "useTabs": false
    },

    "exclude": [
        "_npm"
    ],

    "tasks": {
        "new": "deno run -A ./eng/tasks/create-mod.ts",
        "test": "deno test -A --unstable-ffi"
    },

    "workspace": [
        "./lib/assert",
        "./lib/chars",
        "./lib/process",
        "./lib/runtime-info"
    ],

    "imports": {
        "@std/assert": "jsr:@std/assert@^1.0.6",
        "@std/path": "jsr:@std/path@^1.0.6",
        "@types/node": "npm:@types/node@^22.7.6",
        "assertion-error": "npm:assertion-error@^2.0.1",
        "chai": "npm:chai@^5.1.1"
    }
}
